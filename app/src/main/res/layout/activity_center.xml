<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:openDrawer="right"
    android:id="@+id/drawer"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="Thông tin chi tiết"/>
        <TextView
            android:layout_marginTop="80dp"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quản lý mua bán đồ gỗ"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <LinearLayout

            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            android:id="@+id/hihi"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:id="@+id/btnTHEMMATHANG"
                android:layout_marginLeft="30dp"
                android:text="Thêm mặt hàng"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#DA1016"
                />
            <Button
                android:id="@+id/btnSUAMATHANG"
                android:layout_marginLeft="50dp"
                android:text="Sửa mặt hàng"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:backgroundTint="#4CAF50"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/hihi"
            android:id="@+id/hihi1"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:backgroundTint="#9C27B0"
                android:id="@+id/btnXOAMATHANG"
                android:layout_marginLeft="30dp"
                android:text="Xem tổng quan mặt hàng"
                android:layout_width="150dp"
                android:layout_marginTop="7dp"
                android:layout_height="100dp"/>
            <Button
                android:backgroundTint="#CDDC39"
                android:id="@+id/btnXEMCHITIETHOADON"
                android:text="Xem Chi tiết hóa đơn"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="50dp"
                android:layout_width="150dp"
                android:layout_height="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/hihi1"
            android:id="@+id/hihi122"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <Button
                android:backgroundTint="#00BCD4"
                android:id="@+id/btnCTKHACHHANG"
                android:layout_marginLeft="30dp"
                android:text="Xem chi tiết khách hàng"
                android:layout_width="150dp"
                android:layout_marginTop="0dp"
                android:layout_height="100dp"/>

            <Button
                android:backgroundTint="#3F51B5"
                android:id="@+id/btnXOAMATHANGxoa"
                android:text="Xóa mặt hàng"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_width="150dp"
                android:layout_height="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/hihi122"
            android:id="@+id/hihi1223"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnLOGOUT"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#E91E63"
                android:text="Logout" />
        </LinearLayout>
    </RelativeLayout>
