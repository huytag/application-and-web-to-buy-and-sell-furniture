<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activiti.activity_chitietsanpham">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        app:title="Chi tiết sản phẩm"
        android:background="#F44336"
        app:titleTextColor="#050000"
        android:id="@+id/toolbarchitietsanpham"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:id="@+id/imgchitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_height="200dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="#000"
                android:text="Tên sản phẩm "
                android:textStyle="bold"
                android:id="@+id/textviewtenchitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:maxLines="2"
                >
            </TextView>
            <TextView
                android:textColor="#DC1717"
                android:text="giá sản phẩm "
                android:id="@+id/textviewgiachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="10dp">
            </TextView>
            <Spinner
                android:layout_margin="3dp"
                android:background="@drawable/spinner_drawable"
                android:id="@+id/spinner"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <Button
                android:id="@+id/buttondatmua"
                android:layout_width="match_parent"
                android:text="Thêm giỏ hàng"
                android:textSize="15dp"
                android:textColor="#CDDC39"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô Tả Chi tiết Sản Phẩm"
            android:textColor="#8BC34A"
            android:textSize="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textviewmotachitietsanpham"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">

            </TextView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>